import cv2
import pytesseract
from pytesseract import Output

# File path to save the recognized text
file_path = "/path/to/recognized_text.txt"

# Initialize video capture
cap = cv2.VideoCapture(0)
cap.set(cv2.CAP_PROP_BUFFERSIZE, 1)

# Initialize a set to store unique recognized text
unique_text_set = set()

# Open the file in append mode
with open(file_path, "a") as text_file:
    while True:
        # Capture frame-by-frame
        ret, frame = cap.read()

        # Perform OCR on the frame
        d = pytesseract.image_to_data(frame, output_type=Output.DICT)
        n_boxes = len(d['text'])
        for i in range(n_boxes):
            if int(d['conf'][i]) > 60:
                text = d['text'][i].strip()
                # Filter out non-existent words
                if text and text.isalpha():  # Check if text contains only alphabetic characters
                    # Check if the text is not already in the set (eliminate duplicates)
                    if text not in unique_text_set:
                        unique_text_set.add(text)
                        # Save the text to the file
                        text_file.write(text + "\n")

        # Display the resulting frame
        cv2.imshow('frame', frame)
        
        # Exit if 'q' is pressed
        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

# Release the capture and close the file
cap.release()
cv2.destroyAllWindows()
